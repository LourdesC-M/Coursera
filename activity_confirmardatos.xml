<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_marginLeft="40dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".confirmardatos"
    android:layout_marginStart="40dp">

    <TextView
        android:id="@+id/tvConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:theme="@style/Titulos"
        android:text="Confirmar Datos"
        android:layout_marginStart="60dp" />

    <TextView
        android:id="@+id/tvrnombre"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:theme="@style/formtext"
        android:text="Nombre" />

    <TextView
        android:id="@+id/tvrFecha"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:theme="@style/formtext"
        android:text="Fecha de Nacimiento" />

    <TextView
        android:id="@+id/tvrTelefono"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:theme="@style/formtext"
        android:text="Telefono" />

    <TextView
        android:id="@+id/tvrEmail"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:theme="@style/formtext"
        android:text="Email" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvrDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/formtext"
            android:text="Descripcion"
            />
        <TextView
            android:id="@+id/tvContenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:theme="@style/formtext"
            android:text="Breve"
            android:layout_marginStart="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:text="@string/btnRegresar"
        android:onClick="regresar"
        android:theme="@style/btns"
        android:layout_marginStart="100dp" />

</LinearLayout>